#!/bin/sh
cd /tmp

file1=$(mktemp --tmpdir i3lock-wrapper-XXXXXXXXXX.png)
file2=$(mktemp --tmpdir i3lock-wrapper-XXXXXXXXXX.png)

scrot -d0 "$file1"
/home/miccah/bin/image-scripts/frosted "$file1" "$file2"
rm "$file1"

cmd=()
for i in $@; do
    if [[ $i != '--' ]]; then
        cmd+="$i "
    fi
done

# drop the last "--" introduced by getopt
i3lock -i "$file2" ${cmd}

trap "rm '$file2'" EXIT
