#keystate_numlock = enable
#keystate_capslock = enable
#keystate_scrolllock= enable

# Decrease screen brightness
# Stops before making brightness 0
"[ $(xbacklight -get | python -c 'print(int(float(input())))') -gt '1' ] && xbacklight -dec 1 -steps 1"
    XF86MonBrightnessDown

# Increase screen brightness
"xbacklight -inc 1 -steps 1"
    XF86MonBrightnessUp

# Increases volume
"pulseaudio-ctl up 2"
    XF86AudioRaiseVolume

# Decreases volume
"pulseaudio-ctl down 2"
    XF86AudioLowerVolume

# Toggles mute
"pulseaudio-ctl mute"
    XF86AudioMute

# Increase keyboard brightness
"kb-backlight 1"
    XF86KbdBrightnessUp

# Decrease keyboard brightness
"kb-backlight -1"
    XF86KbdBrightnessDown

# Toggle touchpad on/off
"touchpad-toggle.sh"
    XF86TouchpadToggle

# Print screen
"scrot --focused"
    Mod4 + Print

# mpd controls
"mpc next || mpd"
    Mod4 + j

"mpc prev || mpd"
    Mod4 + k

"mpc toggle || mpd"
    Mod4 + p

"mpc volume +5 || mpd"
    Mod4 + 0

"mpc volume -5 || mpd"
    Mod4 + 9

"mpc seek +5% || mpd"
    Mod4 + l

"mpc seek -5% || mpd"
    Mod4 + h

